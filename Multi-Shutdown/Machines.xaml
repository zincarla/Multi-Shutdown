<Window x:Class="Multi_Shutdown.MachinesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Machines" Height="193" Width="647" Icon="/Multi-Shutdown;component/Images/Shutdown.ico">
    <Grid>
        <DataGrid AutoGenerateColumns="True" Name="dataGrid" ItemsSource="{Binding}" CanUserReorderColumns="False" Margin="0,0,0,23" CanUserAddRows="True" CanUserDeleteRows="True" CanUserSortColumns="False" EnableRowVirtualization="False" />
        <Button Content="Save" HorizontalAlignment="Left" Name="saveButton" Width="75" Height="23" VerticalAlignment="Bottom" Click="saveButton_Click" />
        <Button Content="Cancel" Name="cancelButton" HorizontalAlignment="Right" Width="75" Height="23" VerticalAlignment="Bottom" Click="cancelButton_Click" />
    </Grid>
</Window>
